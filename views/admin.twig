{% extends "partials/base.twig" %}
{% set title = "Admin" %}
{% set page_script = "/assets/js/admin.js" %}

{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <h1 class="text-center">Unpublished Rooms</h1>

            <div class="col-12 col-lg-6">
                <div class="list-group">
                    {% if not unpublished_rooms %}
                        <h3>No unpublished rooms</h3>
                    {% endif %}

                    {% for room in unpublished_rooms %}
                        {% include 'admin/room.twig' with {'room': room} %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <h1 class="text-center">Published Rooms</h1>

            <div class="col-12 col-lg-6">
                <div class="list-group">
                    {% if not published_rooms %}
                        <h3>No published rooms</h3>
                    {% endif %}

                    {% for room in published_rooms %}
                        {% include 'admin/room.twig' with {'room': room} %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
